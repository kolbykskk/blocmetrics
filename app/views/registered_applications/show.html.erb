<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Registered Applications", registered_applications_path %></li>
    <li class="breadcrumb-item active" aria-current="page"><i><%= @application.name %></i></li>
  </ol>
</nav>


<div class="page-header">
  <h1>
    <%= @application.name %>
    <small><%= @application.URL %></small>
  </h1>
</div>


<div class="col-md-4 col-md-offset-4">
  <ul class="list-group">
    <% @events.each do |event| %>
      <li class="list-group-item justify-content-between">
        <%= event[0] %>
        <span class="badge badge-default badge-pill"><%= @application.events.where(name: event[0]).count %></span>
      </li>
    <% end %>
  </ul>
</div>
